{
  "name": "aragon-ipfs",
  "version": "0.0.1",
  "description": "Command-line tools for IPFS",
  "main": "./dist/lib.js",
  "bin": {
    "aragon-ipfs": "./dist/cli.js"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "babel src --out-dir dist --source-maps",
    "build:watch": "npm run build -- --watch",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "ava --verbose",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "nyc --all --reporter=text --reporter=text-summary --reporter=lcovonly npm run test"
  },
  "dependencies": {
    "@aragon/cli-utils": "^0.0.7",
    "byte-size": "^5.0.1",
    "chalk": "^2.4.2",
    "execa": "^2.0.3",
    "fs-extra": "^8.1.0",
    "get-folder-size": "^2.0.1",
    "go-platform": "^1.0.0",
    "inquirer": "^6.5.1",
    "internal-ip": "^4.3.0",
    "ipfs-api": "^26.1.2",
    "ipfs-http-client": "^33.1.1",
    "is-ipfs": "^0.6.1",
    "kill-port": "^1.5.1",
    "listr": "^0.14.3",
    "node-fetch": "^2.6.0",
    "public-ip": "^3.1.0",
    "source-map-support": "^0.5.13",
    "stringify-tree": "^1.0.2",
    "yargs": "^13.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "ava": "^2.3.0",
    "babel-eslint": "^10.0.2",
    "core-js": "^3.1.4",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-ava": "^8.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.3",
    "sinon": "^7.4.1"
  },
  "author": "Aragon Association <legal@aragon.org>",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/aragon/aragon-cli#readme",
  "bugs": {
    "url": "https://github.com/aragon/aragon-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aragon/aragon-cli.git"
  },
  "keywords": [
    "ipfs",
    "cli",
    "aragon",
    "ethereum"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3",
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "@babel/register"
    ],
    "files": [
      "src/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:ava/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
